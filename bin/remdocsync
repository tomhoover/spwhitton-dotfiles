#!/bin/sh

. $HOME/.shenv

if [ "$(hostname -f)" = "athena.silentflame.com" ]; then
    cd $HOME/doc
    mr sync
else
    # ssh already passes argument through `/bin/sh -c'
    ssh athena 'cd $HOME/doc && . $HOME/.shenv && mr sync'
    cd $HOME/doc
    mr sync
    ssh athena 'cd $HOME/doc && . $HOME/.shenv && mr sync'
    cd $HOME/lib/dionysus
    mr sync
    ssh athena 'cd $HOME/lib/dionysus && . $HOME/.shenv && git annex sync'
fi
