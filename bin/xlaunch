#!/bin/sh
. $HOME/.shenv

case $1 in
    www)
        wmctrl -a Iceweasel || iceweasel &
        ;;
    emacs)
        if ! pgrep emacs; then
            emacs --daemon
        fi
        wmctrl -a emacs@`hostname -f` || emacsclient -c -F "((fullscreen . maximized))" &        
        ;;
    ma)
        urxvttmux "spw@ma"
        ;;
    term)
        urxvttmux local
        ;;
esac
