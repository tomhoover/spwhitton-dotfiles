#!/bin/bash

. $HOME/.shenv

if offline; then
    echo >&2 ERROR: We\'re offline\; cannot sync mail
    exit 1
else
    postqueue -f
    if pgrep -u $USER mbsync 2>/dev/null; then
        (killall --user $USER mbsync 2>/dev/null && sleep 5) || true
        killall -9 --user $USER mbsync 2>/dev/null || true
    fi
    mbsync --quiet fastmail
fi
