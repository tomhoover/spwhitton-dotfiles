#!/bin/bash

# TODO use a tmpdir for the output dir, so can run more than one
# search and have the results open in diff windows

# TODO set terminal title to search string

# TODO '-n' option not to include threads, and pass command to mutt
# (with -e) not to sort on threads, in that case

output=$(mairix --threads $@)
#echo $output

if ! [ "$output" = "Matched 0 messages" ]; then
    mutt -Rf ~/local/mairixresults
fi
