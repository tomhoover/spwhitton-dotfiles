#!/bin/sh

VOLUME=60
SONG="/home/swhitton/lib/annex/music/Soundtracks/Steve Jablonsky & Trevor Morris/Command & Conquer 3 OST/05 - Black Dawn.mp3"

# dow=$(date +%u)
# # not at the weekend
# if [ "$dow" = "6" -o "$dow" = "7" ]; then
#     exit 0
# fi

# systemd doesn't set $HOME for services
HOME=/home/swhitton
export HOME

. $HOME/.shenv

# make sure it's not too loud nor muted
amixer set Master ${VOLUME}%
amixer set Master unmute

# play the alarm (TODO: randomly choose from folder of symlinks)
mplayer "$SONG"
