#!/bin/sh

. "$HOME/.shenv"
. "$HOME/lib/tputfs.sh"

# check for clogged mailqs

if [ ! "$(mailq)" = "Mail queue is empty" ]; then
    status potentially clogged local mail queue
    mailq
fi

if [ ! "$(ssh athena mailq)" = "Mail queue is empty" ]; then
    status potentially clogged mail queue on athena
    ssh athena mailq
fi
