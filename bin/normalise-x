#!/bin/sh

# idempotent X settings

. $HOME/.shenv

# ---- no bell please

xset b off

# ---- keyboard settings

xset r rate 380 25
setxkbmap -option ctrl:nocaps
xmodmap ~/.xmodmaprc

# enable numlock if using USB keyboard
lsusb | grep -q "Chicony Electronics Co., Ltd" \
    && numlockx on

# ---- monitor settings

xset dpms 600
xsetroot -solid \#3f3f3f
