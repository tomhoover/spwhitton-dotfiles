#!/bin/sh

. $HOME/.shenv

# postfix should flush itself so just mbsync
if [ -d "$HOME/.fmail" ]; then
    mbsync --quiet fastmail
fi

# Run personal anacron when network comes up -- so that it gets run
# when resuming from suspend and network is available
hostanacrontab=$HOME/.config/anacron/$(whoami)_$(hostname -f)
mkdir -p $HOME/local/anacron/spool
if [ -e "$hostanacrontab" ]; then
    anacron -s -t $hostanacrontab -S $HOME/local/anacron/spool
fi

# TODO system anacron won't run on system resume (#744753) -- run that
# here too?
