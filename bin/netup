#!/bin/sh

. $HOME/.shenv

movemail

# anacron won't run on system resume (#744753) so we run it when the
# network comes up.  This is so it definitely gets run on any day in
# which I use the machine
hostanacrontab=$HOME/.config/anacron/$(whoami)_$(hostname -f)
mkdir -p $HOME/local/anacron/spool
if [ -e "$hostanacrontab" ]; then
    anacron -s -t $hostanacrontab -S $HOME/local/anacron/spool
fi
