#!/bin/sh

. $HOME/.shenv
. $HOME/lib/tputfs.sh

set -e

top="$(git rev-parse --show-toplevel)"
cd $top

git checkout --orphan github
git rm -rf .
echo "This repository is just a fork made in order to submit a pull request; please ignore." > README.md
git add README.md
git commit -m "fork for a pull request; please ignore"
git push origin github

echo ""
status Now complete final steps using the GitHub web interface.
echo Set description to \"This repository is just a fork made in order to submit a pull request; please ignore.\"
echo Disable wiki and issues.
echo Set default branch to \"github\".
