#!/bin/sh

# TODO need to put cabal.config constraints in before downloading or
# the version that `cabal get` installs might not itself be
# installable
mkdir -p $HOME/local/src
for var in "$@"; do
    cd $HOME/local/src
    cabal get $var
    cd ${var}*
    touch .duplicity-ignore
    wget https://www.stackage.org/lts/cabal.config
    cabal sandbox init
    cabal update
    cabal install
done
