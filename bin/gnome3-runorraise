#!/bin/sh

case $1 in
    www)
        wmctrl -a Iceweasel || iceweasel &
        ;;
    emacs)
        if ! pgrep emacs; then
            emacs --daemon
        fi
        wmctrl -a emacs@`hostname -f` || emacsclient -c -F "((fullscreen . maximized))" &        
        ;;
    ma)
        wmctrl -a "spw@ma" || urxvtma &
        ;;
    term)
        wmctrl -a "Local tmux" || urxvttmux &
        sleep 0.2
        wmctrl -r :ACTIVE: -b add,maximized_vert,maximized_horz
        ;;
esac
