#!/bin/bash
. $HOME/.shenv

skelhere ()
{
    usbpubkeys
    mkdir -p doc bin
    cp -RLf ~/lib/annex/big/skel/usb/* .
    cp ~/bin/{apple,dasl}-setup.sh bin
    cp -L ~/lib/pro.terminal lib
}

while true; do
    read -p "This might overwrite stuff in $(pwd).  Is that okay? " yn
    case $yn in
        [Yy]* ) skelhere; break;;
        [Nn]* ) exit;;
        * ) echo "Please answer yes or no.";;
    esac
done
