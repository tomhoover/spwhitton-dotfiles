#!/bin/sh

git annex unused --used-refspec=+refs/heads/master | grep -E "^ +[0-9]+ + [-A-Za-z0-9.]+$" | while read line; do
    num=$(echo $line | cut -d\  -f1)
    file=$(echo $line | cut -d\  -f2)

    echo "====================================================================================="
    echo "           FILE $num"
    echo "$file"
    echo "====================================================================================="
    git -c diff.renameLimit=3000 log --stat -S"$file"
done
