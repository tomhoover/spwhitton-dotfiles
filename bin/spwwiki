#!/bin/bash

set -e

cd $HOME/doc
if git pull --ff-only; then     # otherwise, chronic will e-mail the failed git to me
    cd $HOME
    /usr/pkg/bin/emacs -batch -l $HOME/.emacs.d/init.el -l $HOME/.emacs.d/init-org.el \
        -f spw/export-org-wiki \
        -eval "(org-batch-store-agenda-views)"
fi
