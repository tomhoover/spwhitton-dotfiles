{
    "-hooks": [
        // permit source-only uploads
        "check-debs",
    ],

    "+hooks": [
        "checksums",
        "impatient",
    ],

    // require explicit selection of ftp-master
    "default_host_main": "debomatic-amd64",

    "full_upload_log": true,

    // avoid any problems with dgit (see #827879)
    "run_lintian": false,
}
