# -*- Perl -*-

$pgp_options = ['-us', '-uc'];

# `dht make-all` doesn't like this
#$build_source = 1;
$build_arch_all = 1;
$distribution = 'unstable';

$run_lintian = 1;
$lintian_opts = [
    '--allow-root',
    '--color=never',            # make the .build file more readable
    '--fail-on-warnings'
    ];

$run_piuparts = 1;
$piuparts_opts = [
    '--schroot',
    'unstable-i386-piuparts',
    '--fail-if-inadequate',
    # '--fail-on-broken-symlinks', # too many false positives
    ];

$run_autopkgtest = 1;
$autopkgtest_root_args = ["env"];
$autopkgtest_opts = ["--", "schroot", "unstable-i386-sbuild"];

1;
